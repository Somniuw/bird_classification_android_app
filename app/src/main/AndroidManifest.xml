<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.earlybird.catchbird">



    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EarlyBird">
        <activity
            android:name="com.earlybird.catchbird.encyclopedia.EncyclopediaBirdSearchActivity"
            android:exported="true" />
        <activity
            android:name="com.earlybird.catchbird.encyclopedia.EncyclopediaRankingActivity"
            android:exported="true" />
        <activity
            android:name="com.earlybird.catchbird.encyclopedia.EncyclopediaActivity"
            android:exported="true" />
        <activity
            android:name="com.earlybird.catchbird.CommunityActivity"
            android:exported="false" />
        <activity
            android:name="com.earlybird.catchbird.MapActivity"
            android:exported="false" />
        <activity
            android:name="com.earlybird.catchbird.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/external" />
        </provider>

        <meta-data
            android:name="com.naver.maps.map.CLIENT_ID"
            android:value="@string/naver_client_id" />
    </application>

</manifest>